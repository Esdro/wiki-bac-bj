services:
  database:
    image: postgres:17-alpine
    environment:
      POSTGRES_DB: wikibac
      POSTGRES_USER: user
      POSTGRES_PASSWORD: password_to_change
    volumes:
      - db_data:/var/lib/postgresql/data
      - ./docker/postgres-init:/docker-entrypoint-initdb.d:ro
    ports:
      - "5433:5432"

  backend:
    build:
      context: .
      dockerfile: docker/php/Dockerfile
    volumes:
      - ./backend:/app
    ports:
      - "8998:80"
    depends_on:
      - database
    environment:
      DATABASE_URL: "postgresql://user:password_to_change@database:5432/wikibac?serverVersion=15&charset=utf8"
      SERVER_NAME: ":80"

  frontend:
    image: node:20-alpine
    working_dir: /app
    volumes:
      - ./frontend:/app
    ports:
      - "4200:4200"
    command: sh -c "npm install && npm start"

volumes:
  db_data:
